{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.agents/polyfills/agentsmd/claude.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(rm -rf outputs/)",
      "Bash(xargs -I{} mkdir -p outputs/{})",
      "Edit(outputs/**)"
    ]
  }
}
